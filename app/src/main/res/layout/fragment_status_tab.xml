<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/main_container"
            style="@style/MatchWrap"
            >

            <android.support.design.widget.AppBarLayout
                android:id="@+id/appbar"
                style="@style/MatchWrap"
                android:fitsSystemWindows="true"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                <android.support.design.widget.CollapsingToolbarLayout
                    style="@style/MatchWrap"
                    android:fitsSystemWindows="true"
                    app:contentScrim="?attr/colorPrimary"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/appbar"
                        app:layout_collapseMode="parallax">

                        <!-- spinner -->
                        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                            android:id="@+id/spinner_service"
                            style="@style/spinnerItemStyle"
                            android:layout_marginTop="@dimen/margin_10"
                            android:focusable="true"
                            app:errorEnabled="true"
                            app:met_floatingLabel="highlight"
                            app:met_textColor="@color/colorForgotPasswordHintText"
                            app:met_textColorHint="@color/colorForgotPasswordHintText"/>

                        <android.support.design.widget.TabLayout
                            android:layout_below="@+id/spinner_service"
                            android:id="@+id/tab_layout"
                            style="@style/MatchWrap"
                            android:layout_gravity="fill"
                            android:background="@color/colorPrimaryDark"
                            android:fillViewport="true"
                            android:minHeight="?attr/actionBarSize"
                            app:tabIndicatorHeight="@dimen/margin_5"
                            android:theme="@style/AppTheme"
                            app:tabIndicatorColor="@color/white"
                            app:tabMode="scrollable"
                            app:tabGravity="fill"
                            app:tabSelectedTextColor="@color/white"
                            app:tabTextColor="@color/white" />

                    </RelativeLayout>

                </android.support.design.widget.CollapsingToolbarLayout>

            </android.support.design.widget.AppBarLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/appbar"
                android:orientation="vertical"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <com.incon.service.custom.view.CustomViewPager
                    android:id="@+id/view_pager"
                    style="@style/BothMatch"
                    app:swipeable="false"
                    app:tabGravity="fill"
                    app:tabMode="fixed">

                </com.incon.service.custom.view.CustomViewPager>

            </LinearLayout>
        </android.support.design.widget.CoordinatorLayout>
    </RelativeLayout>
</layout>