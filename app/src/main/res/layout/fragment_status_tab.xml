<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout style="@style/BothMatch">

        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/main_container"
            style="@style/MatchWrap">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/appbar"
                style="@style/MatchWrap"
                android:fitsSystemWindows="true"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                <android.support.design.widget.CollapsingToolbarLayout
                    style="@style/MatchWrap"
                    android:fitsSystemWindows="true"
                    app:contentScrim="?attr/colorPrimary"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

                    <RelativeLayout
                        style="@style/BothMatch"
                        android:layout_below="@+id/appbar"
                        app:layout_collapseMode="parallax">

                        <LinearLayout
                            android:id="@+id/spinners_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="vertical">
                            <!-- spinner service centers -->
                            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                                android:id="@+id/spinner_service_centers"
                                style="@style/spinnerItemStyle"
                                android:layout_marginTop="@dimen/margin_10"
                                android:focusable="true"
                                app:errorEnabled="true"
                                app:met_floatingLabel="highlight"
                                app:met_textColor="@color/colorForgotPasswordHintText"
                                app:met_textColorHint="@color/colorForgotPasswordHintText"/>
                            <!--spinner users-->
                            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                                android:id="@+id/spinner_users"
                                style="@style/spinnerItemStyle"
                                android:layout_marginTop="@dimen/margin_10"
                                android:focusable="true"
                                app:errorEnabled="true"
                                app:met_floatingLabel="highlight"
                                app:met_textColor="@color/colorForgotPasswordHintText"
                                app:met_textColorHint="@color/colorForgotPasswordHintText"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <!--months picker-->
                                <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                                    android:id="@+id/months_picker"
                                    style="@style/spinnerItemStyle"
                                    android:layout_marginTop="@dimen/margin_10"
                                    android:focusable="true"
                                    android:focusableInTouchMode="false"
                                    app:errorEnabled="true"
                                    app:met_floatingLabel="highlight"
                                    app:met_textColor="@color/colorForgotPasswordHintText"
                                    app:met_textColorHint="@color/colorForgotPasswordHintText"/>

                                <!--dummy view for time click event -->
                                <View
                                    android:id="@+id/view_months"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_alignBottom="@+id/months_picker"
                                    android:layout_alignEnd="@+id/months_picker"
                                    android:layout_alignStart="@+id/months_picker"
                                    android:layout_alignTop="@+id/months_picker"
                                    android:background="@null"/>
                            </RelativeLayout>


                            <devs.mulham.horizontalcalendar.HorizontalCalendarView
                                android:id="@+id/calendarView"
                                style="@style/MatchWrap"
                                android:background="@color/colorcalendar"
                                app:selectedDateBackground="@drawable/bg_select_calender"
                                app:selectorColor="@color/colorcalendar"
                                app:sizeBottomText="14sp"
                                app:sizeMiddleText="20sp"/>

                        </LinearLayout>

                        <android.support.design.widget.TabLayout
                            android:id="@+id/tab_layout"
                            style="@style/MatchWrap"
                            android:layout_below="@+id/spinners_layout"
                            android:layout_gravity="fill"
                            android:background="@color/colorTab"
                            android:fillViewport="true"
                            android:minHeight="?attr/actionBarSize"
                            android:theme="@style/AppTheme"
                            app:tabGravity="fill"
                            app:tabIndicatorColor="@color/white"
                            app:tabIndicatorHeight="@dimen/margin_5"
                            app:tabMode="scrollable"
                            app:tabSelectedTextColor="@color/white"
                            app:tabTextColor="@color/white"/>

                    </RelativeLayout>

                </android.support.design.widget.CollapsingToolbarLayout>

            </android.support.design.widget.AppBarLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/appbar"
                android:orientation="vertical"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <com.incon.service.custom.view.CustomViewPager
                    android:id="@+id/view_pager"
                    style="@style/BothMatch"
                    app:swipeable="false"
                    app:tabGravity="fill"
                    app:tabMode="fixed">

                </com.incon.service.custom.view.CustomViewPager>

            </LinearLayout>
        </android.support.design.widget.CoordinatorLayout>
    </RelativeLayout>
</layout>